        <project.custom.central.url>https://search.maven.org/artifact/${project.groupId}/${project.artifactId}/${project.version}/pom</project.custom.central.url>
        <project.custom.scm.repo>https://gitea.anrisoftware.com/anrisoftware.com/resources.git</project.custom.scm.repo>
        <project.custom.scm.github>https://github.com/devent/resources</project.custom.scm.github>
        <project.custom.scm.pub>scm:git:https://gitea.anrisoftware.com/anrisoftware.com/resources.git</project.custom.scm.pub>
        <project.custom.scm.dev>scm:git:git@anrisoftware.com:anrisoftware.com/resources.git</project.custom.scm.dev>
        <project.custom.scm.url>${project.custom.home}/repository</project.custom.scm.url>
        <project.custom.jenkins.url>https://jenkins.anrisoftware.com/job/resources-public</project.custom.jenkins.url>
        <project.custom.jenkins.build.badge.master>${project.custom.jenkins.url}/job/master/badge/icon</project.custom.jenkins.build.badge.master>
        <project.custom.jenkins.build.link.master>${project.custom.jenkins.url}/job/master</project.custom.jenkins.build.link.master>
        <project.custom.sonarqube.url>https://sonarqube.anrisoftware.com/dashboard?id=com.anrisoftware.resources%3Aresources-bundle</project.custom.sonarqube.url>
        <project.custom.sonarqube.qualitygate.badge>https://sonarqube.anrisoftware.com/api/badges/gate?key=com.anrisoftware.resources%3Aresources-bundle</project.custom.sonarqube.qualitygate.badge>
        <project.custom.sonarqube.qualitygate.link>${project.custom.sonarqube.url}</project.custom.sonarqube.qualitygate.link>
        <project.custom.bundle.namespace>com.anrisoftware.resources</project.custom.bundle.namespace>
        <project.custom.bundle.namespace.internal>com.anrisoftware.resources.internal</project.custom.bundle.namespace.internal>
    </properties>

    <developers>
        <developer>
            <id>EM</id>
            <name>Erwin MÃ¼ller</name>
