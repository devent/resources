    <groupId>com.anrisoftware.resources</groupId>
    <artifactId>resources-bundle</artifactId>
    <version>4.5.0</version>
    <name>Resources Bundle POM</name>
    <description>Contains the modules of the resources project.</description>
    <inceptionYear>2012</inceptionYear>
    <packaging>pom</packaging>
